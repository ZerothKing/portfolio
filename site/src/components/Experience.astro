---
const experience = [
  {
    role: "Senior Software Development Engineer",
    company: "Arcesium",
    location: "Hyderabad, Telangana",
    period: "July 2023 – Present",
    type: "current",
    details: [
      "BTM (Better Timestamp Management): Implemented firm-wide project standardizing timestamp serialization/deserialization across all APIs and databases.",
      "Configuration Management System: Architected synchronous configuration update system with periodic caching and monitoring.",
      "BigDecimal SDK Enhancement: Authored RFC and implemented BigDecimal support across Java, Python, and C# SDKs.",
      "Rate Limiter Library: Contributed to rate limiter design decoupling Hazelcast dependencies.",
      "Security & Vulnerability Management: Led InfoSec initiatives fixing vulnerable JARs and defects."
    ]
  },
  {
    role: "Software Development Engineering Intern",
    company: "Arcesium",
    location: "Hyderabad, Telangana",
    period: "May 2022 – July 2022",
    type: "past",
    details: [
      "Built containerized applications using Docker and deployed on Kubernetes.",
      "Implemented CI/CD pipelines using GitLab, reducing deployment time significantly.",
      "Configured Nginx web servers and integrated monitoring using Datadog."
    ]
  }
];
---

<section id="experience" class="container section-padding">
  <h2 class="title">Experience</h2>
  <div class="timeline">
    {experience.map((item, index) => (
      <div class={`timeline-item ${item.type}`} style={`animation-delay: ${index * 0.15}s`}>
        <div class="timeline-line">
          <div class="timeline-dot"></div>
        </div>
        <div class="timeline-card">
          <div class="card-header">
            <div class="role-info">
              <h3 class="role-title">{item.role}</h3>
              <div class="company-info">
                <span class="company-name">{item.company}</span>
                <span class="company-location">{item.location}</span>
              </div>
            </div>
            <div class="period-badge">
              {item.type === 'current' && <span class="current-indicator"></span>}
              <span>{item.period}</span>
            </div>
          </div>
          <ul class="details-list">
            {item.details.map(detail => (
              <li>{detail}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .timeline {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }
  
  .timeline-item {
    display: flex;
    gap: var(--space-6);
    opacity: 0;
    animation: fadeInUp 0.6s var(--ease-out-expo) forwards;
  }
  
  /* Timeline line & dot */
  .timeline-line {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }
  
  .timeline-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--bg-color);
    border: 3px solid var(--border-color);
    position: relative;
    z-index: 2;
    transition: all var(--duration-normal) ease;
  }
  
  .timeline-item.current .timeline-dot {
    border-color: var(--primary-color);
    background: var(--primary-color);
    box-shadow: 0 0 20px var(--primary-glow);
  }
  
  .timeline-item:hover .timeline-dot {
    transform: scale(1.2);
  }
  
  .timeline-line::after {
    content: '';
    width: 2px;
    flex: 1;
    background: linear-gradient(180deg, var(--border-color), transparent);
    margin-top: var(--space-2);
  }
  
  .timeline-item:last-child .timeline-line::after {
    display: none;
  }
  
  /* Card */
  .timeline-card {
    flex: 1;
    background: var(--bg-card);
    backdrop-filter: blur(16px);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    transition: all var(--duration-normal) var(--ease-out-expo);
  }
  
  .timeline-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-glow);
    transform: translateX(8px);
    box-shadow: var(--shadow-md);
  }
  
  .timeline-item.current .timeline-card {
    border-color: rgba(20, 184, 166, 0.3);
  }
  
  /* Header */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-5);
    padding-bottom: var(--space-5);
    border-bottom: 1px solid var(--border-subtle);
    flex-wrap: wrap;
  }
  
  .role-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .role-title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }
  
  .company-info {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }
  
  .company-name {
    font-weight: 600;
    color: var(--primary-color);
  }
  
  .company-location {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }
  
  .company-location::before {
    content: '•';
    margin-right: var(--space-2);
  }
  
  /* Period badge */
  .period-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: var(--bg-elevated);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    color: var(--text-secondary);
    white-space: nowrap;
  }
  
  .current-indicator {
    width: 6px;
    height: 6px;
    background: var(--accent-color);
    border-radius: 50%;
    animation: pulse-glow 2s ease-in-out infinite;
  }
  
  /* Details */
  .details-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: 0;
    margin: 0;
  }
  
  .details-list li {
    position: relative;
    padding-left: var(--space-5);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    line-height: 1.7;
  }
  
  .details-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    border-radius: 50%;
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .timeline-item {
      gap: var(--space-4);
    }
    
    .timeline-line {
      display: none;
    }
    
    .timeline-card {
      padding: var(--space-5);
    }
    
    .card-header {
      flex-direction: column;
      gap: var(--space-3);
    }
    
    .role-title {
      font-size: var(--text-base);
    }
  }
</style>
