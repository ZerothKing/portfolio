---
interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;
}

const { title, description, tags, link } = Astro.props;

// Color mapping for tech categories
const tagColors: Record<string, string> = {
  'Python': 'tag-python',
  'TensorFlow': 'tag-ml',
  'Flask': 'tag-python',
  'Pandas': 'tag-python',
  'Scikit-learn': 'tag-ml',
  'Selenium': 'tag-tool',
  'Matplotlib': 'tag-ml',
  'PyGame': 'tag-python',
  'AI': 'tag-ml',
  'Solidity': 'tag-blockchain',
  'Blockchain': 'tag-blockchain',
  'Ethereum': 'tag-blockchain',
};

const getTagClass = (tag: string) => tagColors[tag] || 'tag-default';
---

<article class="project-card">
  <div class="card-content">
    <div class="card-header">
      <div class="project-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 11-5.93-9.14" stroke-linecap="round"/>
          <polyline points="22 4 12 14.01 9 11.01" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      {link && link !== '#' && (
        <a href={link} class="project-link" target="_blank" rel="noopener" aria-label="View project">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6" stroke-linecap="round"/>
            <polyline points="15 3 21 3 21 9" stroke-linecap="round" stroke-linejoin="round"/>
            <line x1="10" y1="14" x2="21" y2="3" stroke-linecap="round"/>
          </svg>
        </a>
      )}
    </div>
    
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    
    <div class="project-tags">
      {tags.map(tag => (
        <span class={`tag ${getTagClass(tag)}`}>{tag}</span>
      ))}
    </div>
  </div>
  
  <div class="card-glow" aria-hidden="true"></div>
</article>

<style>
  .project-card {
    position: relative;
    background: var(--bg-card);
    backdrop-filter: blur(16px);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    transition: all var(--duration-normal) var(--ease-out-expo);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .project-card:hover {
    border-color: var(--border-glow);
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
  }
  
  .project-card:hover .card-glow {
    opacity: 1;
  }
  
  .project-card:hover .project-icon {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
    color: var(--neutral-950);
    transform: scale(1.1);
  }
  
  /* Glow effect */
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: radial-gradient(ellipse at top, var(--primary-glow), transparent 70%);
    opacity: 0;
    transition: opacity var(--duration-normal) ease;
    pointer-events: none;
  }
  
  .card-content {
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  /* Header */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-4);
  }
  
  .project-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-elevated);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    color: var(--primary-color);
    transition: all var(--duration-normal) var(--ease-out-expo);
  }
  
  .project-link {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    border-radius: var(--radius-md);
    transition: all var(--duration-fast) ease;
  }
  
  .project-link:hover {
    color: var(--primary-color);
    background: rgba(20, 184, 166, 0.1);
  }
  
  /* Title & Description */
  .project-title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }
  
  .project-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-5);
    flex: 1;
  }
  
  /* Tags */
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: auto;
  }
  
  .tag {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 500;
    transition: transform var(--duration-fast) ease;
  }
  
  .tag:hover {
    transform: scale(1.05);
  }
  
  .tag-default {
    background: rgba(113, 113, 122, 0.2);
    color: var(--text-secondary);
    border: 1px solid rgba(113, 113, 122, 0.2);
  }
  
  .tag-python {
    background: rgba(59, 130, 246, 0.15);
    color: #60a5fa;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  
  .tag-ml {
    background: rgba(168, 85, 247, 0.15);
    color: #c084fc;
    border: 1px solid rgba(168, 85, 247, 0.2);
  }
  
  .tag-tool {
    background: rgba(245, 158, 11, 0.15);
    color: #fbbf24;
    border: 1px solid rgba(245, 158, 11, 0.2);
  }
  
  .tag-blockchain {
    background: rgba(34, 197, 94, 0.15);
    color: #4ade80;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }
</style>
