---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Resume | Sanjkeet Jena">
    <section class="container section-padding">
        <h1 class="title">Resume</h1>
        <div class="resume-actions" style="margin-bottom: 2rem;">
            <a href="/Sanjkeet_resume_ep5.5.pdf" class="btn btn-primary" download>Download PDF</a>
        </div>
        
        <div class="resume-frame">
            <object data="/Sanjkeet_resume_ep5.5.pdf" type="application/pdf" width="100%" height="1000px">
                <p>Unable to display PDF file. <a href="/Sanjkeet_resume_ep5.5.pdf">Download instead</a>.</p>
            </object>
        </div>
    </section>
</BaseLayout>

<style>
    .resume-frame {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
    }
    
    .btn {
      padding: 0.8rem 2rem;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s;
      display: inline-block;
    }
    
    .btn-primary {
      background: var(--primary-color);
      color: #fff;
      border: 2px solid var(--primary-color);
    }
    
    .btn-primary:hover {
      background: #4a9eff;
      box-shadow: 0 4px 12px rgba(88, 166, 255, 0.4);
      opacity: 1;
      text-decoration: none;
    }
</style>
