<style>
  /* === Animated Background === */
  .bg-gradient {
    position: fixed;
    inset: 0;
    z-index: -1;
    background: 
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(20, 184, 166, 0.15), transparent),
      radial-gradient(ellipse 60% 40% at 100% 0%, rgba(245, 158, 11, 0.08), transparent),
      radial-gradient(ellipse 50% 50% at 0% 100%, rgba(20, 184, 166, 0.06), transparent);
    pointer-events: none;
  }
  
  /* === Navbar === */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-4) 0;
    transition: all var(--duration-normal) ease;
  }
  
  .navbar::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(12, 12, 15, 0.8);
    backdrop-filter: blur(16px) saturate(180%);
    border-bottom: 1px solid var(--border-subtle);
    z-index: -1;
  }
  
  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0;
    transition: transform var(--duration-fast) ease;
  }
  
  .logo:hover {
    transform: scale(1.02);
  }
  
  .logo-text {
    color: var(--text-primary);
  }
  
  .logo-dot {
    color: var(--primary-color);
  }
  
  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-8);
  }
  
  .nav-links a {
    color: var(--text-secondary);
    font-weight: 500;
    font-size: var(--text-sm);
    text-decoration: none;
    position: relative;
    transition: color var(--duration-fast) ease;
  }
  
  .nav-links a:not(.nav-cta)::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    transition: width var(--duration-normal) var(--ease-out-expo);
    border-radius: var(--radius-full);
  }
  
  .nav-links a:not(.nav-cta):hover {
    color: var(--text-primary);
  }
  
  .nav-links a:not(.nav-cta):hover::after {
    width: 100%;
  }
  
  .nav-cta {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
    color: var(--neutral-950) !important;
    padding: var(--space-2) var(--space-5);
    border-radius: var(--radius-full);
    font-weight: 600;
    box-shadow: 0 2px 10px var(--primary-glow);
    transition: all var(--duration-normal) var(--ease-out-expo);
  }
  
  .nav-cta:hover {
    box-shadow: 0 4px 20px var(--primary-glow);
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .nav-links {
      gap: var(--space-4);
    }
    .nav-links a {
      font-size: var(--text-xs);
    }
    .nav-cta {
      padding: var(--space-2) var(--space-3);
    }
  }
  
  @media (max-width: 480px) {
    .navbar-content {
      flex-direction: column;
      gap: var(--space-3);
    }
    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
  
  /* === Footer === */
  .footer {
    border-top: 1px solid var(--border-subtle);
    padding: var(--space-16) 0 var(--space-8);
    margin-top: var(--space-24);
    background: linear-gradient(180deg, transparent, rgba(20, 184, 166, 0.02));
  }
  
  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
    text-align: center;
  }
  
  .footer-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }
  
  .footer-brand {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 700;
    display: flex;
    align-items: center;
  }
  
  .footer-tagline {
    color: var(--text-muted);
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .footer-links {
    display: flex;
    gap: var(--space-4);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: var(--radius-full);
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    color: var(--text-secondary);
    transition: all var(--duration-normal) var(--ease-out-expo);
  }
  
  .social-link:hover {
    background: var(--bg-card-hover);
    border-color: var(--primary-color);
    color: var(--primary-color);
    transform: translateY(-3px);
    box-shadow: 0 4px 15px var(--primary-glow);
  }
  
  .footer-bottom {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
    width: 100%;
  }
  
  .footer-bottom p {
    color: var(--text-muted);
    font-size: var(--text-xs);
    margin: 0;
  }
</style>
